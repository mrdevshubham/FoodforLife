
@{
    Layout = null;
    int Code = -1;
    string oErrorMessage = "";
    string oSuccessMessage = "";

    if (ViewBag.Code != null)
    {
        Code = ViewBag.Code;

        if (Code == 0)
        {
            oErrorMessage = ViewBag.Message;
        }
        else
        {
            oSuccessMessage = ViewBag.Message;
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Donor Page</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css'>
    <link rel="stylesheet" href="~/Assets/css/donorStyle.css">
    <link rel="stylesheet" href="~/Assets/css/bootstrap-datetimepicker.css">
    <link rel="stylesheet" href="~/Assets/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/themes/smoothness/jquery-ui.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>



    <style>
        .button {
            background-color: #4CAF50; /* Green */
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }

        .button3 {
            background-color: #f44336;
        }
    </style>

</head>
<body>
    <form action="@Url.Action("SaveDonation","Home")" method="post" id="myForm" >
        <div class="container">
            <h2 class="tittle_w3_agileinfo">Food Donation Form</h2>
            <div class="row">
                <h4>Personal Details</h4>
                <div class="input-group input-group-icon">
                    <input type="text" id="name" name="Name" placeholder="Full Name" maxlength="50" required />
                    <div class="input-icon"><i class="fa fa-user"></i></div>
                </div>
                <div class="input-group input-group-icon">
                    <input type="number" id="contact" name="ContactNumber" placeholder="Contact" maxlength="10" required />
                    <div class="input-icon">
                        <i class="material-icons">&#xe0b0;</i>
                    </div>
                </div>
                <div class="input-group input-group-icon">
                    <input type="email" id="email" name="EmailId" placeholder="Email Id" maxlength="50" required />
                    <div class="input-icon"><i class="fa fa-envelope"></i></div>
                </div>
            </div>
            <div class="row">
                <div class="col-half">
                    <h4>Date of Birth</h4>
                    <div class="input-group input-group-icon">
                        <input id="dateDOB" name="DateOfBirth" placeholder="DOB" required />
                        <div class="input-icon"><i class="fa fa-calendar" aria-hidden="true"></i></div>
                    </div>
                </div>
                <div class="col-half">
                    <h4>Wedding Anniversary</h4>
                    <div class="input-group input-group-icon">
                        <input id="dateAnniversary" name="AnniveraryDate" placeholder="Wedding Anniversary" required />
                        <div class="input-icon"><i class="fa fa-calendar" aria-hidden="true"></i></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <h4>Function Details</h4>
                <div class="input-group input-group-icon">
                    <input id="functionDate" name="EventDate" placeholder="Function Date" required />
                    <div class="input-icon"><i class="fa fa-calendar" aria-hidden="true"></i></div>
                </div>

                <div class="input-group input-group-icon">
                    <input type="textarea" id="venueAddress" name="EventAddress" placeholder="Venue Details" maxlength="500" required />
                    <div class="input-icon"><i class="material-icons">&#xe567;</i></div>
                </div>
                <div class="input-group input-group-icon">
                    <input type="text" id="city" name="City" placeholder="City" maxlength="50" required />
                    <div class="input-icon"><i class="material-icons">&#xe567;</i></div>
                </div>


                <div class="input-group input-group-icon">
                    <input type="text" id="state" name="State" placeholder="State" maxlength="50" required />
                    <div class="input-icon"><i class="material-icons">&#xe567;</i></div>
                </div>

                <div class="input-group input-group-icon">
                    <input type="number" id="pincode" name="PinCode" placeholder="Pincode" maxlength="50" required />
                    <div class="input-icon"><i class="fa fa-user"></i></div>
                </div>
            </div>


            <div class="input-group input-group-icon">
                <select id="partyType" name="PartyTypeId" required class="col-dropdown">
                    <option value="0">--Select Party Type--</option>
                    <option value="101">Birthday Party</option>
                    <option value="102">Wedding</option>
                    <option value="104">Kitty Party / Get Together</option>
                    <option value="104">Death Ceremony</option>
                    <option value="106">Devotional Ceremony</option>
                    <option value="107">Others</option>
                </select>
            </div>

            <div class="input-group input-group-icon">
                <input type="text" class="display-hide" id="otherTextId" name="EventName" placeholder="Others(Please Specify)" maxlength="50" />
                <div class="input-icon"><i class="fa fa-user"></i></div>
            </div>

            <div class="input-group input-group-icon">
                <select id="foodType" name="FoodType" required class="col-dropdown-right">
                    <option value="">--Select Food Type--</option>
                    <option value="1">Vegetarian</option>
                    <option value="2">Non-Vegetarian</option>
                </select>
            </div>

            <div class="row">
                <h4>Logistics Details</h4>

                <div class="input-group input-group-icon">
                    <input type="number" id="servingsInvited" name="TotalServingInvited" placeholder="Number of servings invited" maxlength="9" required />
                    <div class="input-icon"><i style="font-size:24px" class="fa">&#xf0c0;</i></div>
                </div>
                <div class="input-group input-group-icon">
                    <input type="number" id="timeCollection" name="CollectionTime" placeholder="Time Of Collection" min="0" max="23" maxlength="2" required />
                    <div class="input-icon"><i class="material-icons">&#xe192;</i></div>
                </div>
                <div class="input-group input-group-icon">
                    <input type="number" id="expectedServings" name="TotalServingLeft" placeholder="Expected Servings Left" maxlength="9" />
                    <div class="input-icon"><i style="font-size:24px" class="fa">&#xf0c0;</i></div>
                </div>
            </div>

            <div class="row">
                <h4>Consent</h4>
                <div class="input-group">
                    <input type="checkbox" id="terms" name="terms"/>
                    <label for="terms">I agree to receive the promotional emails and messages from Feed4Life for my contributions to the society.</label>
                </div>
            </div>
            <div id="dv-message" class="row">
                <div class="input-group input-group-icon">
                    <p style="color:red">@oErrorMessage</p>
                    <p style="color:green">@oSuccessMessage</p>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <button type="submit" class="button" id="donorSubmitButton" name="donorSubmitButton">Submit</button>
                    <button type="button" onclick="reset()" id="resetDonorButton" name="resetDonorButton" class="button button3">Reset</button>
                </div>
            </div>

        </div>

        @*<script src="js/index.js"></script>*@


        <script type="text/javascript">
            var productType = document.getElementById('otherTextId').value;

        </script>


        <script>
            $(document).ready(function () {

                var ocd = '@Code';

                if (ocd >= 0) {

                    $('html,body').animate({
                        scrollTop: $("#dv-message").offset().top
                    },
                        'slow');
                }



                $("#functionDate").datepicker({ minDate: 0 });
                $("#dateDOB").datepicker({ maxDate: new Date() });
                $("#dateAnniversary").datepicker({ maxDate: new Date() });

                $('#otherTextId').css('display','none')

                $('#partyType').change(function () {
                    var Value = this.value;

                    if (Value == 107) {
                        $('#otherTextId').css('display', 'inline-block');
                        $('#otherTextId').attr('required', 'true');
                    }
                });

            });

            function reset() {
                document.getElementById("myForm").reset();

            }
        </script>
</form>
</body>
</html>

